<div id="page" ng-app="historyApp">
	<%- partial('partials/header.ejs', {active: "history"}) %>

	<div class="container">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

			<div class="content well history-content" ng-controller="HistoryController">
				<h1 class="white">Your latest 30 results</h1>
				<table class="table table-hover" ng-show="meassurements.length">
					<thead>
						<th>When</th>
						<th>Weight</th>
						<th>BMI</th>
						<th>Category</th>
					</thead>
					<tbody>
						<tr ng-repeat="datapoint in meassurements">
							<td>{{ datapoint.createdAt | amDateFormat: 'dddd, MMMM D - h:mm a'}}</td>
							<td>{{ datapoint.weight }} kg</td>
							<td>{{ datapoint.bmi }}</td>
							<td>{{ datapoint.category }}</td>
						</tr>
					</tbody>
				</table>

				<div ng-hide="meassurements.length">
					<br />
					<div class="alert alert-warning">
						You don't have entries yet, <a href="/calculate">create one</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>